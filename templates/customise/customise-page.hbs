<form class="monks-journal-sheet sheet" autocomplete="off" onsubmit="event.preventDefault();">
    <div class="flexcol">
        {{> page}}
    </div>
    <footer class="flexrow" style="flex-grow: 0">
        <button class="reset-all" type="button">
            <i class="fas fa-undo"></i> Reset Defaults
        </button>
        <button type="submit">
            <i class="fas fa-save"></i> Save Changes
        </button>
    </footer>
</form>